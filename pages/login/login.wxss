/* 登录页面样式 */
.login-page {
    height: 100vh;
    background-color: var(--theme-bg-card);
    display: flex;
    flex-direction: column;
    padding: 0 var(--theme-spacing-xxxl);
}

/* Logo区域 - 位于竖屏上1/3位置 */
.login-page__logo-section {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 150rpx;
}

.login-page__logo {
    width: 200rpx;
    height: 200rpx;
}

/* 公司信息区域 */
.login-page__company-section {
    display: flex;
    justify-content: center;
    margin-bottom: var(--theme-spacing-section);
}

.login-page__company-name {
    font-size: var(--theme-font-logo-size);
    font-weight: var(--theme-font-weight-bold);
    color: var(--theme-text-primary);
    text-align: center;
}

/* 登录区域 - 位于竖屏下1/2位置 */
.login-page__login-section {
    margin-top: 120rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: var(--theme-spacing-section);
}

/* 用户协议区域 */
.login-page__agreement {
    margin-bottom: var(--theme-spacing-xxxl);
}

.login-page__checkbox {
    display: flex;
    align-items: flex-start;
}

.login-page__checkbox-icon {
    width: 22rpx;
    height: 22rpx;
    border: 2rpx solid var(--theme-border-medium);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: var(--theme-spacing-lg);
    flex-shrink: 0;
    margin-top: 6rpx;
    background-color: var(--theme-bg-card);
    transition: all var(--theme-duration-base) var(--theme-ease-out);
}

.login-page__checkbox-icon--checked {
    background-color: var(--theme-color-primary);
    border-color: var(--theme-color-primary);
}

.login-page__checkbox-icon--checked .iconfont {
    color: var(--theme-text-white);
    font-size: 20rpx;
}

.login-page__agreement-text {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    font-size: var(--theme-font-size-xs);
    color: var(--theme-text-tertiary);
    line-height: var(--theme-line-height-base);
    flex: 1;
}

.login-page__agreement-link {
    color: var(--theme-color-primary);
}

.login-page__agreement-link:active {
    color: var(--theme-color-primary-hover);
}

/* 登录按钮容器 */
.login-page__button-container {
    padding: 0 var(--theme-spacing-lg);
}

.login-page__login-button {
    width: 100% !important;
    height: 88rpx;
    background:  var(--theme-color-primary);
    border: none;
    border-radius: var(--theme-radius-xxl);
    color: var(--theme-text-white);
    font-size: var(--theme-font-size-lg);
    font-weight: var(--theme-font-weight-medium);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--theme-shadow-md);
    transition: all var(--theme-duration-base) var(--theme-ease-out);
}

.login-page__login-button::after {
    border: none;
}

.login-page__login-button:active {
    transform: translateY(2rpx);
    box-shadow: var(--theme-shadow-sm);
}

/* 动画效果 */
.login-page__logo {
    animation: logoFadeIn 0.8s var(--theme-ease-out);
}

.login-page__company-name {
    animation: slideInUp 0.6s var(--theme-ease-out) 0.2s both;
}

.login-page__agreement {
    animation: slideInUp 0.6s var(--theme-ease-out) 0.4s both;
}

.login-page__login-button {
    animation: slideInUp 0.6s var(--theme-ease-out) 0.6s both;
}

@keyframes logoFadeIn {
    from {
        opacity: 0;
        transform: scale(0.8);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(40rpx);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* ==========================================================================
   自定义弹窗组件样式 - Custom Modal Styles
   ========================================================================== */

/* 弹窗容器 */
.login-page__modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: var(--theme-z-index-modal);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: all var(--theme-duration-base) var(--theme-ease-out);
}

.login-page__modal--show {
    opacity: 1;
    visibility: visible;
}

/* 弹窗遮罩 */
.login-page__modal-mask {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 1;
}

/* 弹窗内容容器 */
.login-page__modal-content {
    position: relative;
    z-index: 2;
    width: 560rpx;
    background-color: var(--theme-bg-card);
    border-radius: var(--theme-radius-lg);
    box-shadow: var(--theme-shadow-xl);
    overflow: hidden;
    transform: scale(0.8);
    transition: transform var(--theme-duration-base) var(--theme-ease-out);
}

.login-page__modal--show .login-page__modal-content {
    transform: scale(1);
}

/* 弹窗头部 */
.login-page__modal-header {
    padding: var(--theme-spacing-xxxl) var(--theme-spacing-xxxl) var(--theme-spacing-xl);
    text-align: center;
    border-bottom: 1rpx solid var(--theme-border-light);
}

.login-page__modal-title {
    font-size: var(--theme-font-size-lg);
    font-weight: var(--theme-font-weight-medium);
    color: var(--theme-text-primary);
}

/* 弹窗内容 */
.login-page__modal-body {
    line-height: var(--theme-line-height-base);
    padding: var(--theme-spacing-xxxl);
    padding-bottom: 20rpx;
}

.login-page__modal-text {
    font-size: var(--theme-font-size-md);
    color: var(--theme-text-tertiary);
    line-height: var(--theme-line-height-base);
}

.login-page__modal-text-weight{
  color: var(--theme-text-secondary); 
}

/* 弹窗底部按钮区域 */
.login-page__modal-footer {
    display: flex;
    padding: 20rpx;
    gap: 50rpx;
}

.login-page__modal-button {
    flex: 1;
    height: 68rpx;
    border: none;
    border-radius: var(--theme-radius-xxl);
    font-size: var(--theme-font-size-md);
    font-weight: var(--theme-font-weight-medium);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color var(--theme-duration-base) var(--theme-ease-out);
    position: relative;
}

.login-page__modal-button::after {
    border: none;
}

/* 取消按钮 */
.login-page__modal-button--cancel {
  background-color: #F7F8FA;
  color: var(--theme-text-secondary);
}

.login-page__modal-button--cancel:active {
    background-color: var(--theme-bg-active);
}

.login-page__modal-button--cancel::after {
    content: '';
    position: absolute;
    right: 0;
    top: 20%;
    bottom: 20%;
    width: 1rpx;
    background-color: var(--theme-border-light);
}

/* 确认按钮 */
.login-page__modal-button--confirm {
    background-color: #e8cc77;
    color: var(--theme-text-white);
}

.login-page__modal-button--confirm:active {
    background-color: var(--theme-bg-active);
}

/* 弹窗动画 */
@keyframes modalFadeIn {
    from {
        opacity: 0;
        transform: scale(0.8);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}

@keyframes modalFadeOut {
    from {
        opacity: 1;
        transform: scale(1);
    }
    to {
        opacity: 0;
        transform: scale(0.8);
    }
}
