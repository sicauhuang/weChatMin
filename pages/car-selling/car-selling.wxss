/* pages/car-selling/car-selling.wxss */

.car-selling-page {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding-bottom: 120rpx;
}

/* 页面头部 */
.car-selling-page__header {
  padding: 40rpx 40rpx 20rpx;
  border-radius: 0 0 40rpx 40rpx;
  margin-bottom: 30rpx;
}

.header__title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.header__subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 操作按钮 */
.car-selling-page__action {
  padding: 0 40rpx;
  margin-bottom: 30rpx;
}

.action-button {
  width: 100%;
  height: 96rpx;
  background: #FF8C00;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 140, 0, 0.3);
  border: none;
  margin: 0;
  padding: 0;
}

.action-button::after {
  border: none;
}

.action-button__icon {
  font-size: 32rpx;
  color: #ffffff;
  margin-right: 16rpx;
}

.action-button__text {
  font-size: 32rpx;
  font-weight: 500;
  color: #ffffff;
}

/* 车辆列表 */
.car-selling-page__list {
  flex: 1;
  padding: 0 40rpx;
}

.vehicle-list {
  height: calc(100vh - 360rpx);
}

/* 车辆卡片 */
.vehicle-card {
  background: #ffffff;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  position: relative;
  transition: all 0.3s ease;
}

.vehicle-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

/* 车辆图片 */
.vehicle-card__image {
  width: 160rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
  margin-right: 24rpx;
}

.vehicle-card__image-pic {
  width: 100%;
  height: 100%;
}

/* 状态标签 */
.vehicle-card__status {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
}

.vehicle-card__status-text {
  font-size: 20rpx;
  font-weight: 500;
}

.vehicle-card__status--ON_SALE {
  background: rgba(82, 196, 26, 0.9);
}

.vehicle-card__status--ON_SALE .vehicle-card__status-text {
  color: #ffffff;
}

.vehicle-card__status--RESERVED {
  background: rgba(250, 173, 20, 0.9);
}

.vehicle-card__status--RESERVED .vehicle-card__status-text {
  color: #ffffff;
}

.vehicle-card__status--SOLD {
  background: rgba(140, 140, 140, 0.9);
}

.vehicle-card__status--SOLD .vehicle-card__status-text {
  color: #ffffff;
}

.vehicle-card__status--OFFLINE {
  background: rgba(245, 34, 45, 0.9);
}

.vehicle-card__status--OFFLINE .vehicle-card__status-text {
  color: #ffffff;
}

/* 车辆内容 */
.vehicle-card__content {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

/* 基本信息 */
.vehicle-card__basic {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.vehicle-card__model {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.vehicle-card__price {
  font-size: 28rpx;
  font-weight: 600;
  color: #FF8C00;
}

/* 详细信息 */
.vehicle-card__details {
  margin-bottom: 16rpx;
}

.vehicle-card__detail-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.vehicle-card__detail-item:last-child {
  margin-bottom: 0;
}

.vehicle-card__detail-icon {
  font-size: 24rpx;
  color: #666666;
  margin-right: 8rpx;
  width: 24rpx;
}

.vehicle-card__detail-text {
  font-size: 26rpx;
  color: #666666;
}

/* 联系信息 */
.vehicle-card__contact {
  margin-bottom: 16rpx;
}

.vehicle-card__contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.vehicle-card__contact-item:last-child {
  margin-bottom: 0;
}

.vehicle-card__contact-icon {
  font-size: 24rpx;
  color: #999999;
  margin-right: 8rpx;
  width: 24rpx;
}

.vehicle-card__contact-text {
  font-size: 24rpx;
  color: #999999;
}

/* 元信息 */
.vehicle-card__meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.vehicle-card__condition {
  font-size: 24rpx;
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.vehicle-card__time {
  font-size: 22rpx;
  color: #cccccc;
}

/* 箭头指示器 */
.vehicle-card__arrow {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
}

.vehicle-card__arrow-icon {
  font-size: 24rpx;
  color: #cccccc;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 0;
}

.empty-state__icon {
  font-size: 120rpx;
  color: #e5e5e5;
  margin-bottom: 40rpx;
}

.empty-state__text {
  display: block;
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 16rpx;
}

.empty-state__subtitle {
  display: block;
  font-size: 28rpx;
  color: #cccccc;
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: 60rpx 0;
}

.loading-state__text {
  font-size: 28rpx;
  color: #999999;
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: 40rpx 0;
}

.load-more__text {
  font-size: 28rpx;
  color: #999999;
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.no-more__text {
  font-size: 28rpx;
  color: #cccccc;
}