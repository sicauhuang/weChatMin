/* pages/car-selling/car-selling.wxss */
@import '../../assets/fonts/iconfont.wxss';
@import '../../assets/styles/theme.wxss';

.car-selling-page {
  position: relative;
  height: 100vh;
  background-color: var(--theme-bg-white);
  padding-bottom: 120rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 页面头部 */
.car-selling-page__header {
  padding: var(--theme-spacing-sm) var(--theme-spacing-xxxl) var(--theme-spacing-lg);
  border-bottom: 1rpx solid var(--theme-border-light);
}

.header__title {
  display: block;
  font-size: var(--theme-font-size-xxl);
  font-weight: var(--theme-font-weight-bold);
  color: var(--theme-color-primary);
}

.header__subtitle {
  display: block;
  font-size: var(--theme-font-size-xs);
  color: var(--theme-text-tertiary);
}

/* 过滤菜单 */
.car-selling-page__filter {
  margin: 0 var(--theme-spacing-lg) var(--theme-spacing-md);
  background-color: var(--theme-bg-card);
  border-radius: var(--theme-radius-lg);
}


/* 车辆列表 */
.car-selling-page__list {
  flex: 1;
  padding: 0 var(--theme-spacing-lg);
  overflow: hidden;
  padding-bottom: 100rpx;
}

.vehicle-list {
  height: 100%;
}

/* 收藏按钮区域 */
.vehicle-card__favorite-button {
  max-width: 88rpx;
  max-height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  cursor: pointer;
  transition: all var(--theme-duration-base) var(--theme-ease-out);
  /* 扩大点击区域 */
  padding: var(--theme-spacing-lg);
  opacity: 1;
}

.vehicle-card__favorite-button--hidden {
  opacity: 0;
  pointer-events: none;
  transform: scale(0.8);
}

.vehicle-card__favorite-button:active {
  transform: scale(0.9);
}

/* 收藏图标 */
.vehicle-card__favorite-icon {
  font-size: var(--theme-icon-size-lg);
  color: var(--theme-color-primary);
  transition: all var(--theme-duration-base) var(--theme-ease-out);
}

/* 已收藏状态图标 */
.icon-yishoucang {
  color: var(--theme-color-primary) !important;
  /* 添加微妙的缩放动画 */
  animation: favoriteScaleIn var(--theme-duration-base) var(--theme-ease-out);
}

/* 未收藏状态图标 */
.icon-shoucang {
  color: var(--theme-color-primary);
  opacity: 0.7;
}

.vehicle-card__favorite-button:active .vehicle-card__favorite-icon {
  transform: scale(1.1);
}

/* 收藏动画效果 */
@keyframes favoriteScaleIn {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: var(--theme-spacing-page) 0;
}

.empty-state__icon {
  font-size: 120rpx;
  color: var(--theme-text-placeholder);
  margin-bottom: var(--theme-spacing-xxxl);
}

.empty-state__text {
  display: block;
  font-size: var(--theme-font-size-lg);
  color: var(--theme-text-secondary);
  margin-bottom: var(--theme-spacing-md);
}

.empty-state__subtitle {
  display: block;
  font-size: var(--theme-font-size-md);
  color: var(--theme-text-tertiary);
  margin-bottom: var(--theme-spacing-xl);
}

.empty-state__reset-btn {
  background: var(--theme-color-primary);
  color: var(--theme-text-white);
  border: none;
  border-radius: var(--theme-radius-sm);
  padding: var(--theme-spacing-sm) var(--theme-spacing-lg);
  font-size: var(--theme-font-size-sm);
  margin-top: var(--theme-spacing-lg);
}

.empty-state__reset-btn::after {
  border: none;
}

.empty-state__reset-text {
  color: var(--theme-text-white);
}

/* 加载状态 */
.loading-state {
  text-align: center;
  padding: var(--theme-spacing-section) 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--theme-spacing-lg);
}

.loading-state__spinner {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-state__text {
  font-size: var(--theme-font-size-md);
  color: var(--theme-text-secondary);
}

/* 加载更多 */
.load-more {
  text-align: center;
  padding: var(--theme-spacing-xl) 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--theme-spacing-md);
}

.load-more__spinner {
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-more__text {
  font-size: var(--theme-font-size-md);
  color: var(--theme-text-secondary);
}

/* 底部提示 */
.bottom-tip {
  text-align: center;
  padding: var(--theme-spacing-lg) 0 var(--theme-spacing-xl);
}

.bottom-tip__text {
  font-size: var(--theme-font-size-sm);
  color: var(--theme-text-placeholder);
  opacity: 0.8;
}

.bottom-tip__text--end {
  color: var(--theme-text-tertiary);
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: var(--theme-spacing-md) 0;
}

.no-more__text {
  font-size: var(--theme-font-size-md);
  color: var(--theme-text-placeholder);
}

/* 动画效果 */
.vehicle-card {
  animation: fadeInUp var(--theme-duration-slow) var(--theme-ease-out);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* 底部按钮区域 */
.car-selling-page__footer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  flex-shrink: 0;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: var(--theme-z-index-fixed);
}

/* 按钮容器 */
.car-selling-page__buttons {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--theme-spacing-xxl);
}

/* 通用按钮样式 */
.car-selling-page__button {
  width: 200rpx !important;
  height: 80rpx;
  background: var(--theme-bg-white);
  border: 3rpx solid var(--theme-color-primary);
  border-radius: var(--theme-radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--theme-spacing-xs);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 2;
  padding: 0;
  margin: 0;
  line-height: 1;
  transition: all var(--theme-duration-base) var(--theme-ease-out);
}

.car-selling-page__button::after {
  border: none;
}

/* 新建车辆按钮 */
.car-selling-page__button--create {
  border-color: var(--theme-color-primary);
}

.car-selling-page__button--create .car-selling-page__button-icon {
  color: var(--theme-color-primary);
}

.car-selling-page__button--create .car-selling-page__button-text {
  color: var(--theme-color-primary);
}

/* 删除按钮 */
.car-selling-page__button--delete {
  border-color: var(--theme-text-white) !important;
}

.car-selling-page__button--delete .car-selling-page__button-icon {
  color: var(--theme-color-error);
}

.car-selling-page__button--delete .car-selling-page__button-text {
  color: var(--theme-color-error);
}

/* 取消按钮 */
.car-selling-page__button--cancel {
  border-color: var(--theme-text-white) !important;
}

.car-selling-page__button--cancel .car-selling-page__button-icon {
  color: var(--theme-text-secondary);
}

.car-selling-page__button--cancel .car-selling-page__button-text {
  color: var(--theme-text-secondary);
}

/* 确认删除按钮 */
.car-selling-page__button--confirm {
  background: var(--theme-color-error);
  border-color: var(--theme-color-error);
}

.car-selling-page__button--confirm .car-selling-page__button-icon {
  color: var(--theme-text-white);
}

.car-selling-page__button--confirm .car-selling-page__button-text {
  color: var(--theme-text-primary);
}

/* 按钮禁用状态 */
.car-selling-page__button[disabled] {
  opacity: 0.5;
  transform: none !important;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 按钮加载状态 */
.car-selling-page__button[loading] {
  pointer-events: none;
}

/* 装饰性元素 */
.car-selling-page__decoration {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
}

.car-selling-page__decoration--left {
  left: 60rpx;
  width: 8rpx;
  height: 8rpx;
}

.car-selling-page__decoration--right {
  right: 60rpx;
  width: 12rpx;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.15);
}

/* 新建车辆按钮样式 */
.car-selling-page__button {
  width: 200rpx !important;
  height: 80rpx;
  background: var(--theme-bg-white);
  border: 3rpx solid var(--theme-color-primary);
  border-radius: var(--theme-radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--theme-spacing-xs);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  position: relative;
  z-index: 2;
  padding: 0;
  margin: 0;
  line-height: 1;
  transition: all var(--theme-duration-base) var(--theme-ease-out);
}

.car-selling-page__button::after {
  border: none;
}

/* 按钮悬停效果 */
.car-selling-page__button--hover {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

/* 按钮图标 */
.car-selling-page__button-icon {
  font-size: var(--theme-font-size-lg);
  color: var(--theme-color-primary);
}

/* 按钮文字 */
.car-selling-page__button-text {
  font-size: var(--theme-font-size-sm);
  font-weight: var(--theme-font-weight-medium);
  color: var(--theme-color-primary);
}

/* ===========================================
   删除模式动画效果
   =========================================== */

/* 删除模式切换动画 */
.vehicle-card {
  animation: fadeInUp var(--theme-duration-slow) var(--theme-ease-out);
}

/* 进入删除模式时的动画 */
.vehicle-card__checkbox {
  animation: checkboxFadeIn var(--theme-duration-base) var(--theme-ease-out) forwards;
}

.van-dropdown-menu {
  box-shadow: none !important;
}
.van-dropdown-menu__item {
  justify-content: flex-start !important;
}

/* 选中状态切换动画 */
.vehicle-card--selected {
  animation: cardSelectIn var(--theme-duration-base) var(--theme-ease-out);
}

/* 按钮状态切换动画 */
.car-selling-page__buttons {
  animation: buttonSlideIn var(--theme-duration-base) var(--theme-ease-out);
}

/* 删除模式动画关键帧 */
@keyframes checkboxFadeIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx) translateY(-50%);
  }
  to {
    opacity: 1;
    transform: translateX(0) translateY(-50%);
  }
}

@keyframes cardSelectIn {
  from {
    transform: scale(1);
    background-color: var(--theme-bg-card);
  }
  to {
    transform: scale(1.02);
    background-color: rgba(218, 165, 32, 0.1);
  }
}

@keyframes buttonSlideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes pulse {
  0%,
  100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}
