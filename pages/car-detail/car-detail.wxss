/* pages/car-detail/car-detail.wxss */

.car-detail-page {
  min-height: 100vh;
  background-color: #f8f9fa;
  position: relative;
}

/* 加载遮罩 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
}

.loading-text {
  font-size: 32rpx;
  color: #666666;
}

/* 详情容器 */
.detail-container {
  height: calc(100vh - 120rpx);
  padding-bottom: 40rpx;
}

/* 车辆图片轮播 */
.detail-images {
  position: relative;
  height: 500rpx;
  background: #000000;
}

.images-swiper {
  width: 100%;
  height: 100%;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

/* 状态标签 */
.detail-status {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  z-index: 10;
}

.detail-status__text {
  font-size: 24rpx;
  font-weight: 500;
  color: #ffffff;
}

.detail-status--ON_SALE {
  background: rgba(82, 196, 26, 0.9);
}

.detail-status--RESERVED {
  background: rgba(250, 173, 20, 0.9);
}

.detail-status--SOLD {
  background: rgba(140, 140, 140, 0.9);
}

.detail-status--OFFLINE {
  background: rgba(245, 34, 45, 0.9);
}

/* 图片计数 */
.image-counter {
  position: absolute;
  bottom: 32rpx;
  right: 32rpx;
  background: rgba(0, 0, 0, 0.6);
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

.image-counter__text {
  font-size: 24rpx;
  color: #ffffff;
}

/* 详情卡片 */
.detail-card {
  background: #ffffff;
  margin: 24rpx 40rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.detail-card__header {
  padding: 32rpx 32rpx 0;
}

.detail-card__title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.detail-card__content {
  padding: 24rpx 32rpx 32rpx;
}

/* 基本信息 */
.basic-info {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.basic-info__main {
  flex: 1;
}

.basic-info__model {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
}

.basic-info__condition {
  display: inline-block;
  font-size: 24rpx;
  color: #52c41a;
  background: rgba(82, 196, 26, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.basic-info__price {
  display: flex;
  align-items: baseline;
  flex-direction: column;
  text-align: right;
}

.basic-info__price-text {
  font-size: 48rpx;
  font-weight: 600;
  color: #FF8C00;
  line-height: 1;
}

.basic-info__price-unit {
  font-size: 24rpx;
  color: #FF8C00;
  margin-top: 4rpx;
}

/* 详细信息 */
.detail-info {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 24rpx;
}

.detail-info__item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.detail-info__item:last-child {
  margin-bottom: 0;
}

.detail-info__label {
  display: flex;
  align-items: center;
}

.detail-info__icon {
  font-size: 28rpx;
  color: #666666;
  margin-right: 12rpx;
  width: 28rpx;
}

.detail-info__label-text {
  font-size: 28rpx;
  color: #666666;
}

.detail-info__value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

/* 联系信息 */
.contact-info__item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f8f8f8;
}

.contact-info__item:last-child {
  margin-bottom: 0;
  border-bottom: none;
}

.contact-info__label {
  display: flex;
  align-items: center;
}

.contact-info__icon {
  font-size: 28rpx;
  color: #666666;
  margin-right: 12rpx;
  width: 28rpx;
}

.contact-info__label-text {
  font-size: 28rpx;
  color: #666666;
}

.contact-info__value {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.contact-info__phone {
  display: flex;
  align-items: center;
}

.contact-info__call-icon {
  font-size: 24rpx;
  color: #FF8C00;
  margin-left: 12rpx;
}

/* 车辆描述 */
.description-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 发布信息 */
.publish-info__item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.publish-info__item:last-child {
  margin-bottom: 0;
}

.publish-info__label {
  font-size: 26rpx;
  color: #999999;
}

.publish-info__value {
  font-size: 26rpx;
  color: #666666;
}

/* 占位空间 */
.detail-spacer {
  height: 120rpx;
}

/* 底部操作按钮 */
.detail-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 120rpx;
  background: #ffffff;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
  gap: 24rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.detail-actions__button {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  margin: 0;
  padding: 0;
}

.detail-actions__button::after {
  border: none;
}

.detail-actions__button-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.detail-actions__button--secondary {
  background: #f5f5f5;
  color: #666666;
}

.detail-actions__button--secondary:active {
  background: #e8e8e8;
}

.detail-actions__button--primary {
  background: #FF8C00;
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(255, 140, 0, 0.3);
}

.detail-actions__button--primary:active {
  background: #e67e00;
}

/* 操作菜单 */
.action-sheet {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: flex-end;
}

.action-sheet__mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.action-sheet__content {
  width: 100%;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  overflow: hidden;
  z-index: 10;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

.action-sheet__header {
  padding: 32rpx 40rpx 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.action-sheet__title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.action-sheet__close {
  font-size: 32rpx;
  color: #cccccc;
  padding: 8rpx;
}

.action-sheet__body {
  padding: 16rpx 0 32rpx;
}

.action-sheet__item {
  display: flex;
  align-items: center;
  padding: 24rpx 40rpx;
  transition: background-color 0.2s;
}

.action-sheet__item:active {
  background: #f8f8f8;
}

.action-sheet__item.danger {
  color: #ff4d4f;
}

.action-sheet__item-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 32rpx;
}

.action-sheet__item-text {
  flex: 1;
  font-size: 32rpx;
}

.action-sheet__item-arrow {
  font-size: 24rpx;
  color: #cccccc;
}