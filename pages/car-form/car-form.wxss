/* pages/car-form/car-form.wxss */

.car-form-page {
    height: 100vh;
    background-color: #f7f8fa;
    position: relative;
}

/* 加载状态 */
.loading-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
}

.loading-text {
    color: #ffffff;
    font-size: 32rpx;
    margin-top: 20rpx;
}

/* 表单容器 */
.form-container {
    height: calc(100vh - 140rpx);
    padding-bottom: 40rpx;
}

/* 字段单位样式 */
.field-unit {
    color: #969799;
    font-size: 28rpx;
    padding: 0 20rpx;
}

/* 车型选择和日期选择单元格样式 */
.car-brandModel,
.car-plateDate {
    background-color: #ffffff;
}

.car-brandModel .van-cell__title,
.car-plateDate .van-cell__title {
    color: #323233;
    font-size: 28rpx;
}

.car-brandModel .van-cell__value,
.car-plateDate .van-cell__value {
    color: #969799;
    font-size: 28rpx;
}

/* 当有值时，显示为正常文本颜色 */
.car-brandModel.has-value .van-cell__value,
.car-plateDate.has-value .van-cell__value {
    color: #323233;
}

/* 底部操作按钮 */
.form-actions {
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #ebedf0;
  z-index: 100;
  overflow: hidden;
}

.submit-button {
    width: 100%;
    height: 88rpx;
    border-radius: 8rpx;
    font-size: 32rpx;
    font-weight: 500;
    flex:1 !important;
    overflow: hidden;
}

/* 审批按钮样式 */
.approval-actions {
    display: flex;
    gap: 20rpx;
    width: 100%;
    overflow: hidden;
}

.approval-button {
    flex: 1;
    height: 88rpx;
    border-radius: 8rpx;
    font-size: 32rpx;
    font-weight: 500;
    overflow: hidden;
}

.approval-reject-button {
    background-color: #ee0a24 !important;
    border-color: #ee0a24 !important;
}

.approval-approve-button {
    background-color: #07c160 !important;
    border-color: #07c160 !important;
}

/* 上传进度弹窗样式 */
.upload-progress-popup {
    border-radius: 16rpx;
}

.upload-progress-container {
    padding: 60rpx 40rpx;
    text-align: center;
    min-width: 500rpx;
}

.upload-icon {
    margin-bottom: 30rpx;
}

.upload-message {
    font-size: 32rpx;
    color: #323233;
    margin-bottom: 30rpx;
    font-weight: 500;
}

.upload-progress {
    margin-bottom: 20rpx;
}

.upload-tip {
    font-size: 24rpx;
    color: #969799;
    line-height: 1.5;
}

/* Vant 组件样式覆盖 */

/* Cell Group 标题样式 */
.van-cell-group__title {
    padding: 32rpx 30rpx 16rpx;
    font-size: 28rpx;
    color: #323233;
    font-weight: 600;
    background-color: #f7f8fa;
}

/* Cell 和 Field 通用样式 */
.van-cell,
.van-field {
    padding: 24rpx 30rpx;
    font-size: 28rpx;
    background-color: #ffffff;
}

.van-cell:not(:last-child)::after,
.van-field:not(:last-child)::after {
    border-bottom: 1rpx solid #ebedf0;
    left: 30rpx;
    right: 30rpx;
}

/* Field 标签样式 */
.van-field__label {
    color: #323233;
    font-weight: 500;
    width: 160rpx;
    margin-right: 24rpx;
}

/* Field 输入框样式 */
.van-field__input {
    color: #323233;
    font-size: 28rpx;
    text-align: right;
}

.van-field__input::placeholder {
    color: #c8c9cc;
}

/* 必填字段标识样式 */
.van-field[required] .van-field__label::before,
.van-cell[required] .van-cell__title::before {
    content: '*';
    color: #ee0a24;
    margin-right: 8rpx;
    font-weight: bold;
}

/* 车辆照片上传器样式 */
.van-uploader {
    padding: 0;
}

.van-uploader__wrapper {
    margin: 0;
}

.van-uploader__preview {
    margin: 0 16rpx 16rpx 0;
}

.van-uploader__upload {
    margin: 0 16rpx 16rpx 0;
    background-color: #fafafa;
    border: 2rpx dashed #dcdee0;
    border-radius: 8rpx;
}

.van-uploader__upload-icon {
    color: #dcdee0;
    font-size: 48rpx;
}

.van-uploader__upload-text {
    color: #969799;
    font-size: 24rpx;
    margin-top: 16rpx;
}

/* 车型选择器弹窗样式 */
.vehicle-picker-popup {
    height: 100%;
}

/* Toast 样式调整 */
.van-toast {
    font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
    .van-field__label {
        width: 140rpx;
    }

    .submit-button {
        height: 80rpx;
        font-size: 30rpx;
    }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
    .car-form-page {
        background-color: #1a1a1a;
    }

    .van-cell-group__title {
        background-color: #1a1a1a;
        color: #ffffff;
    }

    .van-cell,
    .van-field {
        background-color: #2d2d2d;
        color: #ffffff;
    }

    .van-field__label {
        color: #ffffff;
    }

    .van-field__input {
        color: #ffffff;
    }

    .form-actions {
        background-color: #2d2d2d;
        border-top-color: #484848;
    }
}
