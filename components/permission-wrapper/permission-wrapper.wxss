/* 权限包装器组件样式 */

/* 组件容器化和样式隔离 */
:host {
  contain: style;
  display: block;
}

.permission-wrapper {
  display: block !important;
  /* 重置可能被页面影响的样式 */
  box-sizing: border-box !important;
  font-family: inherit !important;
  font-size: inherit !important;
  line-height: inherit !important;
}

.permission-content {
  transition: opacity 0.3s ease-in-out;
}

/* 禁用状态样式 */
.permission-disabled {
  opacity: 0.5;
  pointer-events: none;
}

.permission-disabled-content {
  opacity: 0.4;
  pointer-events: none;
  position: relative;
}

.permission-disabled-content::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.1);
  pointer-events: none;
}

/* 降级内容样式 */
.permission-fallback {
  padding: 20rpx;
  text-align: center;
  color: #999;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  border: 1px dashed #ddd;
}

.permission-fallback-text {
  font-size: 28rpx;
  color: #666;
}

/* 占位符样式 */
.permission-placeholder {
  padding: 10rpx;
  text-align: center;
  color: #ccc;
  background-color: transparent;
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.permission-placeholder-text {
  font-size: 24rpx;
  color: #ccc;
}

/* 加载状态样式 */
.permission-loading {
  padding: 10rpx;
  text-align: center;
  opacity: 0.6;
}

.permission-loading-text {
  font-size: 24rpx;
  color: #999;
}

/* 透明度动画 */
.permission-content {
  animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 隐藏状态 - 完全不占空间 */
.permission-wrapper[hidden] {
  display: none !important;
}