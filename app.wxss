/* ==========================================================================
   全局样式文件 - Global Styles
   引入主题变量和图标字体，设置全局样式
   ========================================================================== */

/* 引入主题变量文件 */
@import './assets/styles/theme.wxss';
/* 引入图标字体文件 */
@import './assets/fonts/iconfont.wxss';

/* ==========================================================================
   全局页面样式 - Global Page Styles
   ========================================================================== */

page {
    max-height: calc(100vh - 50rpx);
    overflow: hidden;
    /* 使用主题变量设置全局背景色 */
    background-color: var(--theme-bg-page);
    /* 为有 tabBar 的页面添加底部内边距 */
    padding-bottom: 50px;
    /* 设置全局字体 */
    font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Segoe UI, Arial,
        Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei', sans-serif;
    /* 设置全局字体大小 */
    font-size: var(--theme-font-size-md);
    /* 设置全局文字颜色 */
    color: var(--theme-text-primary);
    /* 设置全局行高 */
    line-height: var(--theme-line-height-base);
}

/* ==========================================================================
   全局容器样式 - Global Container Styles
   ========================================================================== */

.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-between;
    padding: 200rpx 0 100rpx 0;
    box-sizing: border-box;
}

/* ==========================================================================
   全局重置样式 - Global Reset Styles
   ========================================================================== */

/* 重置按钮样式 */
button {
    background: none;
    border: none;
    padding: 0;
    margin: 0;
    font-size: inherit;
    color: inherit;
    line-height: inherit;
}

button::after {
    border: none;
}

/* 重置输入框样式 */
input,
textarea {
    font-size: inherit;
    color: inherit;
    line-height: inherit;
}

/* 重置图片样式 */
image {
    display: block;
    max-width: 100%;
}

/* ==========================================================================
   全局工具类 - Global Utility Classes
   ========================================================================== */

/* 文本对齐 */
.text-left {
    text-align: left !important;
}
.text-center {
    text-align: center !important;
}
.text-right {
    text-align: right !important;
}

/* 显示/隐藏 */
.show {
    display: block !important;
}
.hide {
    display: none !important;
}

/* Flex 布局 */
.flex {
    display: flex !important;
}
.flex-column {
    flex-direction: column !important;
}
.flex-row {
    flex-direction: row !important;
}
.flex-center {
    display: flex !important;
    align-items: center !important;
    justify-content: center !important;
}
.flex-between {
    display: flex !important;
    justify-content: space-between !important;
    align-items: center !important;
}
.flex-around {
    display: flex !important;
    justify-content: space-around !important;
    align-items: center !important;
}

/* 文字省略 */
.ellipsis {
    overflow: hidden !important;
    text-overflow: ellipsis !important;
    white-space: nowrap !important;
}

.ellipsis-2 {
    overflow: hidden !important;
    text-overflow: ellipsis !important;
    display: -webkit-box !important;
    -webkit-line-clamp: 2 !important;
    -webkit-box-orient: vertical !important;
}

.ellipsis-3 {
    overflow: hidden !important;
    text-overflow: ellipsis !important;
    display: -webkit-box !important;
    -webkit-line-clamp: 3 !important;
    -webkit-box-orient: vertical !important;
}

/* 清除浮动 */
.clearfix::after {
    content: '';
    display: table;
    clear: both;
}

/* 安全区域适配 */
.safe-area-top {
    padding-top: constant(safe-area-inset-top);
    padding-top: env(safe-area-inset-top);
}

.safe-area-bottom {
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}

/* ==========================================================================
   全局动画类 - Global Animation Classes
   ========================================================================== */

/* 淡入动画 */
.fade-in {
    animation: fadeIn var(--theme-duration-slow) var(--theme-ease-out);
}

@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(var(--theme-spacing-lg));
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* 滑入动画 */
.slide-in-up {
    animation: slideInUp var(--theme-duration-slow) var(--theme-ease-out);
}

@keyframes slideInUp {
    from {
        opacity: 0;
        transform: translateY(var(--theme-spacing-xxxl));
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* 缩放动画 */
.scale-in {
    animation: scaleIn var(--theme-duration-base) var(--theme-ease-out);
}

@keyframes scaleIn {
    from {
        opacity: 0;
        transform: scale(0.9);
    }
    to {
        opacity: 1;
        transform: scale(1);
    }
}
