/* ==========================================================================
   Vant 组件图标样式统一 - Vant Component Icon Styling
   ========================================================================== */

/* 确保所有Vant图标使用项目主题色 */
.van-icon {
    color: var(--theme-icon-color-primary);
    font-size: var(--theme-icon-size-md);
    transition: color var(--theme-duration-base) var(--theme-ease-out);
}

/* 图标大小变体 */
.van-icon--xs {
    font-size: var(--theme-icon-size-xs);
}

.van-icon--sm {
    font-size: var(--theme-icon-size-sm);
}

.van-icon--md {
    font-size: var(--theme-icon-size-md);
}

.van-icon--lg {
    font-size: var(--theme-icon-size-lg);
}

.van-icon--xl {
    font-size: var(--theme-icon-size-xl);
}

/* 图标颜色变体 */
.van-icon--primary {
    color: var(--theme-color-primary);
}

.van-icon--success {
    color: var(--theme-color-success);
}

.van-icon--error,
.van-icon--danger {
    color: var(--theme-color-error);
}

.van-icon--warning {
    color: var(--theme-color-warning);
}

.van-icon--info {
    color: var(--theme-color-info);
}

.van-icon--secondary {
    color: var(--theme-icon-color-secondary);
}

.van-icon--tertiary {
    color: var(--theme-icon-color-tertiary);
}

/* ==========================================================================
   特定组件图标适配 - Specific Component Icon Adaptation
   ========================================================================== */

/* Button 组件图标 */
.van-button .van-icon {
    margin-right: var(--theme-spacing-xs);
}

.van-button--round .van-icon {
    margin-right: var(--theme-spacing-sm);
}

/* Cell 组件图标 */
.van-cell__left-icon {
    color: var(--theme-icon-color-primary);
    font-size: var(--theme-icon-size-md);
    margin-right: var(--theme-spacing-sm);
}

.van-cell__right-icon {
    color: var(--theme-icon-color-tertiary);
    font-size: var(--theme-icon-size-sm);
    margin-left: var(--theme-spacing-xs);
}

/* Dialog 组件图标 */
.van-dialog__header .van-icon {
    color: var(--theme-color-primary);
    font-size: var(--theme-icon-size-lg);
    margin-bottom: var(--theme-spacing-sm);
}

/* Toast 组件图标 */
.van-toast .van-icon {
    color: var(--theme-text-white);
    font-size: var(--theme-icon-size-lg);
    margin-bottom: var(--theme-spacing-xs);
}

/* Loading 组件图标 */
.van-loading .van-icon {
    color: var(--theme-color-primary);
}

/* Tag 组件图标 */
.van-tag .van-icon {
    font-size: var(--theme-font-size-xs);
    margin-right: 4rpx;
}

/* Search 组件图标 */
.van-search .van-icon {
    color: var(--theme-text-secondary);
    font-size: var(--theme-icon-size-md);
}

/* Empty 组件图标 */
.van-empty .van-icon {
    color: var(--theme-text-placeholder);
    font-size: 120rpx;
    opacity: 0.6;
}

/* ActionSheet 组件图标 */
.van-action-sheet__item .van-icon {
    color: var(--theme-icon-color-secondary);
    font-size: var(--theme-icon-size-md);
    margin-right: var(--theme-spacing-sm);
}

/* Checkbox 组件图标 */
.van-checkbox__icon .van-icon {
    color: var(--theme-text-white);
    font-size: 24rpx;
}

/* Grid 组件图标 */
.van-grid-item .van-icon {
    color: var(--theme-icon-color-primary);
    font-size: var(--theme-icon-size-xl);
    margin-bottom: var(--theme-spacing-xs);
}

/* Popup 组件关闭图标 */
.van-popup__close-icon {
    color: var(--theme-text-secondary);
    font-size: var(--theme-icon-size-lg);
    transition: color var(--theme-duration-base) var(--theme-ease-out);
}

.van-popup__close-icon:active {
    color: var(--theme-text-primary);
}

/* ==========================================================================
   图标动画效果 - Icon Animation Effects
   ========================================================================== */

/* 图标悬停效果 */
.van-icon:active {
    transform: scale(0.95);
    transition: transform var(--theme-duration-fast) var(--theme-ease-out);
}

/* 旋转动画 */
.van-icon--spin {
    animation: van-icon-spin 1s linear infinite;
}

@keyframes van-icon-spin {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(360deg);
    }
}

/* 脉冲动画 */
.van-icon--pulse {
    animation: van-icon-pulse 1.5s ease-in-out infinite;
}

@keyframes van-icon-pulse {
    0%, 100% {
        opacity: 1;
        transform: scale(1);
    }
    50% {
        opacity: 0.7;
        transform: scale(1.05);
    }
}

/* 弹跳动画 */
.van-icon--bounce {
    animation: van-icon-bounce 0.6s ease-in-out;
}

@keyframes van-icon-bounce {
    0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-6rpx);
    }
    60% {
        transform: translateY(-3rpx);
    }
}

/* ==========================================================================
   响应式图标适配 - Responsive Icon Adaptation
   ========================================================================== */

@media (max-width: 750rpx) {
    .van-icon {
        font-size: var(--theme-icon-size-sm);
    }

    .van-icon--lg {
        font-size: var(--theme-icon-size-md);
    }

    .van-icon--xl {
        font-size: var(--theme-icon-size-lg);
    }
}

@media (max-width: 600rpx) {
    .van-cell__left-icon {
        font-size: var(--theme-icon-size-sm);
        margin-right: var(--theme-spacing-xs);
    }

    .van-grid-item .van-icon {
        font-size: var(--theme-icon-size-lg);
    }
}
